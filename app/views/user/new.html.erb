<section class="user-register">
  <div class="container">
    <% if @duplicate %>
      <jumbotron>Email has already been registered. Please choose a different email.</jumbotron>
    <% end %>
    <%= form_for :user, url: '/user', :html => {:class => 'form-signin'} do |f| %>
      <h1 class="form-signin-heading">Register</h1>

      <label for="inputFirstName" class="sr-only">First Name:</label>
      <%= f.text_field :first_name, class: 'form-control', id: 'inputFirstName', placeholder: "First Name" %>
      <label for="inputLastName" class="sr-only">Last Name:</label>
      <%= f.text_field :last_name, class: 'form-control', id: 'inputLastName', placeholder: "Last Name" %>
      <label for="inputEmail" class="sr-only">Email:</label>
      <%= f.text_field :email, class: 'form-control', id: 'inputEmail', placeholder: "Email address" %>
      <label for="inputPassword" class="sr-only">Password:</label>
      <%= f.password_field :password, class: 'form-control', id: 'inputPassword', placeholder: "Password" %>
      <label for="inputConfirmation" class="sr-only">Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'inputConfirmation', placeholder: "Confirm Password" %>
      <%= f.submit "Submit", class: 'btn btn-lg btn-primary btn-block' %>

    <% end %>
  </div>

</section>
